{
    "name": "books-crud",
    "version": "1.0.0",
    "description": "Books CRUD with Hexagonal Architecture and Serverless",
    "main": "dist/index.js",
    "scripts": {
        "sls:dev": "sls offline --stage develop",
        "sls:deploy:dev": "sls deploy --stage develop",
        "sls:deploy:prod": "sls deploy --stage prod",
        "ls:dev": "AWS_ENDPOINT_URL=http://localhost:4566 sls deploy --stage local",
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only src/infrastructure/lambda/bootstrap.ts",
        "test": "jest"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.585.0",
        "@aws-sdk/lib-dynamodb": "^3.585.0",
        "aws-lambda": "^1.0.7",
        "reflect-metadata": "^0.2.2",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.138",
        "@types/node": "^20.10.0",
        "esbuild": "^0.27.2",
        "serverless-localstack": "^1.3.1",
        "serverless-offline": "^13.5.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    }
}
